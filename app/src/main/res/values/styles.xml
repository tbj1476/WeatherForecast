<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="temp_main">
        <item name="android:textColor">#2A2A2A</item>
        <item name="android:opacity">opaque</item>
        <item name="android:textSize">96sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-black</item>
        <item name="android:lineHeight" tools:targetApi="p">112sp</item>
    </style>

    <style name="city_main">
        <item name="android:textColor">#556799</item>
        <item name="android:opacity">opaque</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-thin</item>
        <item name="android:lineHeight" tools:targetApi="p">52sp</item>
    </style>

    <style name="forecast_item">
        <item name="android:textColor">#2A2A2A</item>
        <item name="android:opacity">opaque</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:lineHeight" tools:targetApi="p">19sp</item>
    </style>

    <style name="error_msg">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">54sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-thin</item>
    </style>

</resources>
